<h1>Login</h1>
<%= form_tag '/sessions/create', method: 'post' do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], { type: 'email', class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, { class: 'form-control' } %>
  </div>
  <div class="actions"><%= submit_tag "Log in", { class: 'btn btn-primary' } %></div>
<% end %>
<%= render 'cookies_eu/consent_banner', link: '/cookies', target: '_blank' %> 
