<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<%= link_to 'New Group', new_group_path, class: 'btn btn-secondary text-white mb-4' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Mentor names</th>
      <th scope="col">Mentees count</th>
      <th scope="col">Status</th>
      <th scope="col" colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.mentors.map { |m| m.name }.join(', '), group %></td>
        <td><%= group.mentees.size %></td>
        <td><%= group_state_badge(group) %></td>
        <td>
          <%= link_to 'Edit', edit_group_path(group), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Show', group, class: 'btn btn-secondary btn-sm' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
