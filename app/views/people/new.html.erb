<h1>
  <%= if @person.role_name == 'mentee'
      t('register_as_mentee')
    elsif @person.role_name == 'mentor'
      t('register_as_mentor')
    end
  -%>
</h1>
<% if current_person&.isgodmother? && (params[:internal].present? || params[:person]&.dig(:internal).present?) %>
  <%= render 'form', person: @person %>
<% else %>
  <%= render 'form_public', person: @person %>
<% end %>