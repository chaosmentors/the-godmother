<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Chaospatinnen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="/">Chaospatinnen</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse">
        <% if godmother? -%>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'All', people_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Godmothers', { controller: 'people', action: 'index', g: true, s: 3 }, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Mentors', { controller: 'people', action: 'index', r: 2, s: 3 }, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Mentees', { controller: 'people', action: 'index', r: 1, s: 3 }, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Groups', groups_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav my-2 my-lg-0">
          <li class="nav-item">
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/change_password">Change password</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/sessions/destroy">Log out</a>
          </li>
        </ul>
      <% end -%>
      </div>

    </nav>

    <main role="main" class="container">

      <div class="content">
        <%= flash_messages(flash).html_safe %> 

        <%= yield %>
        <% flash.clear %>
      </div>
    </main><!-- /.container -->
  </body>
</html>

